<?xml version="1.0" encoding="UTF-8"?>
<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd /
    opt/SUNWportal/dtd/portlet.xsd"
    version="1.0">
    
    <portlet>
        <portlet-name>RssPortlet</portlet-name>
        <portlet-class>com.sun.portal.rssportlet.RssPortlet</portlet-class>
        <expiration-cache>30</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>edit</portlet-mode>
            <portlet-mode>help</portlet-mode>
        </supports>
        <supported-locale>en_US</supported-locale>
        <portlet-info>
            <title>Rss Portlet</title>
            <short-title>Sun: Rss</short-title>
            <keywords>RSS, syndication, feed, Atom</keywords>
        </portlet-info>
        
        
        <user-attribute>
            <description>uid</description>
            <name>user.login.id</name>
        </user-attribute>
        <user-attribute>
            <description>uid</description>
            <name>user.login.password</name>
        </user-attribute>
        <user-attribute>
            <description>uid</description>
            <name>username</name>
        </user-attribute>
        <user-attribute>
            <description>password</description>
            <name>password</name>
        </user-attribute>
        <user-attribute>
            <description>organizationalstatus</description>
            <name>userRole</name>
        </user-attribute>
        <user-attribute>
            <description>organizationalstatus</description>
            <name>uPortalTemplateUserName</name>
        </user-attribute>
        <user-attribute>
            <description>mail</description>
            <name>mail</name>
        </user-attribute>
        
        
        <portlet-preferences>
            <preference>
                <name>user_feeds</name>
                <value>http://www.alistapart.com/feed/rss.xml</value> 
                <value>http://rss.cbc.ca/canadiannews.xml</value>
                <value>http://rss.cbc.ca/lineup/sports.xml</value>
				<value>http://feeds.feedburner.com/ConfessionsOfAPioneerWoman</value>
				<value>http://wvs.topleftpixel.com/index.rdf</value>
				<value>http://feeds.gawker.com/gizmodo/excerpts.xml</value>
				<value>http://feeds.feedburner.com/GlobalCulture</value>
				<value>http://www.tbray.org/ongoing/ongoing.atom</value> 
				<value>http://www.phdcomics.com/gradfeed_justcomics.php</value> 
				<value>http://www.quotationspage.com/data/qotd.rss</value>
				<value>http://www.microsite.reuters.com/rss/topNews</value>
				<value>http://rickmercer.blogspot.com/feeds/posts/default</value>
				<value>http://www.gcfl.net/rss.php</value>
				<value>http://www.worldpress.org/feeds/topstories.xml</value>
				<value>http://youtube.com/rss/global/recently_featured.rss</value>
            </preference>
            
            <preference>
                <name>maxEntries</name>
                <value>5</value>
            </preference>
            <preference>
                <name>newWindow</name>
                <value>true</value>
            </preference>
            <preference>
                <name>disableMaxAge</name>
                <value>true</value>
            </preference>
            <preference>
                <name>maxAge</name>
                <value>72</value>
            </preference>
            <preference>
                <name>cacheTimeout</name>
                <value>900</value>
            </preference>
            <preference>
                <name>maxDescriptionLength</name>
                <value>512</value>
            </preference>
        </portlet-preferences>
    </portlet>
</portlet-app>                
