<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
 version="1.0" 
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
 xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
    <portlet>
        <description>Software Distribution Portlet Description</description>
        <portlet-name>SoftwareDistributionPortlet</portlet-name>
        <display-name>Software Distribution Portlet</display-name>
        <portlet-class>ca.uoguelph.ccs.portal.portlets.elmportlet.ElmPortlet</portlet-class>
        <expiration-cache>-1</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
            <portlet-mode>EDIT</portlet-mode>
            <portlet-mode>HELP</portlet-mode>
        </supports>
        <supported-locale>en</supported-locale>        
        <portlet-info>
            <title>Software Distribution Portlet</title>
            <short-title>Elm Portlet</short-title>
            <keywords>Elm</keywords>
        </portlet-info>
		<user-attribute>
		    <description>uid</description>
		    <name>user.login.id</name>
		</user-attribute>
        <user-attribute>
            <description>uid</description>
            <name>user.login.password</name>
        </user-attribute>
		<user-attribute>        
			<description>organizationalstatus</description>
			<name>uPortalTemplateUserName</name>
		</user-attribute>
		
    </portlet>
 </portlet-app>
