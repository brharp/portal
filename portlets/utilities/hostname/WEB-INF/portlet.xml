<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd" 
	version="1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">
	<portlet>
        	<description>Hostname Portlet for the UofG's Enterprise Portal.</description>
		
        	<portlet-name>HostnamePortlet</portlet-name>
		
        	<display-name>Hostname Portlet</display-name>
		
        	<portlet-class>ca.uoguelph.ccs.portal.portlets.hostname.HostnamePortlet</portlet-class>

        	<expiration-cache>-1</expiration-cache>
		        
        	<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>

		<portlet-info>
			<title>Hostname Portlet</title>
			<short-title>hostname Portlet</short-title>
			<keywords>Utility, Portlet</keywords>
		</portlet-info>
	</portlet>
 </portlet-app>
